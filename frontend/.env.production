# Production Environment Configuration
# These variables are used when building for production deployment

# Backend API URL for production (Render backend service)
# This matches the backend service name in render.yaml
VITE_API_URL=https://language-learning-backend.onrender.com

# WebSocket URL for production (Render backend service)
# This matches the backend service name in render.yaml
VITE_WS_URL=wss://language-learning-backend.onrender.com

# Environment identifier
VITE_APP_ENV=production

# API timeout in milliseconds (longer for production due to potential cold starts)
VITE_API_TIMEOUT=900000

# Number of retry attempts for failed requests
VITE_API_RETRIES=5

# WebSocket reconnection settings (more aggressive for production)
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10